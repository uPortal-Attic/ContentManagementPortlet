<!DOCTYPE log4j:configuration SYSTEM "log4j.dtd" >
<log4j:configuration>
	<appender name="stdout" class="org.apache.log4j.ConsoleAppender">
		<layout class="org.apache.log4j.PatternLayout">
			<param name="ConversionPattern" value="%p %t %c%n%d{ABSOLUTE} %5p %c{1}:%L - %m%n%n"/>
		</layout>
	</appender>
	
	<appender name="file" class="org.apache.log4j.FileAppender">
		<param name="File"  value="ContentManagementPortlet.log" />
    	<param name="Append" value="false" />    		
		<layout class="org.apache.log4j.PatternLayout">
			<param name="ConversionPattern" value="%p %t %c%n%d{ABSOLUTE} %5p %c{1}:%L - %m%n%n"/>
		</layout>
	</appender>
	
	<!-- Here are the levels: TRACE < DEBUG < INFO < WARN < ERROR < FATAL -->
	<logger name="org.jasig.portlet.cms">
        <level value="debug"/>
    </logger>
    
    <logger name="org.springframework">
        <level value="warn"/>
    </logger>
    
    <logger name="org.springmodules">
    	<level value="warn"/>
    </logger>
    
    <logger name="org.apache">
        <level value="warn"/>
    </logger>
    
	<root>
		<appender-ref ref="file"/>
		<appender-ref ref="stdout"/>
	</root>
	
</log4j:configuration>